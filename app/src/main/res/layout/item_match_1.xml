<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="30px"
        android:layout_centerVertical="true"
        android:gravity="center_horizontal"
        android:id="@+id/linearLayout2">

        <ImageView
            android:id="@+id/ivStarMatch"
            android:layout_width="30px"
            android:layout_height="30px"
            android:src="@drawable/start"/>

        

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_toLeftOf="@+id/linearLayout"
        android:layout_toRightOf="@+id/linearLayout2"
        android:layout_centerInParent="true">

        <LinearLayout
            android:id="@+id/layout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingTop="16px"
            android:gravity="center_horizontal"
            android:paddingBottom="42px"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tvHalfScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_hint_color"
                android:textSize="14px"
                android:layout_marginTop="16px"
                android:text="(1-2)"/>

            <LinearLayout
                android:id="@+id/layoutcenter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvHomeScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_hint_color"
                    android:textSize="20px"
                    android:text="0"/>

                <TextView
                    android:id="@+id/tvTeamScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_hint_color"
                    android:textSize="20px"
                    android:text=" - "/>

                <TextView
                    android:id="@+id/tvVisitScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_hint_color"
                    android:textSize="20px"
                    android:text="0"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/layout3"
            android:orientation="vertical"
            android:paddingRight="26px"
            android:gravity="right"
            android:paddingTop="16px">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom">

                <TextView
                    android:id="@+id/tvMatchType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14px"
                    android:text="奥运"
                    android:textColor="#047baa"/>

                <TextView
                    android:id="@+id/tvMatchTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12px"
                    android:layout_marginLeft="20px"
                    android:text="09:00"
                    android:textColor="@color/text_hint_color"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                <TextView
                    android:id="@+id/tvHomeTeamRanking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_hint_color"
                    android:textSize="14px"
                    android:layout_marginRight="9px"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:text="[9]" />

                <TextView
                    android:id="@+id/tvHomeRed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                                   android:textSize="12px"
                    android:textColor="#aa0200"
                    android:layout_marginRight="10px"
                    android:text="1"
                    android:layout_toLeftOf="@+id/tvHomeTeamRanking"/>

                <TextView
                    android:id="@+id/tvHomeyellow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12px"
                    android:textColor="@color/colorAccent"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10px"
                    android:text="1"
                    android:layout_toLeftOf="@+id/tvHomeRed"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/tvHomeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color"
                    android:text="巴西"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="24px"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="12px">

                <TextView
                    android:id="@+id/tvD1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_hint_color"
                    android:textSize="12px"
                    android:text="0.0"/>
                <TextView
                    android:id="@+id/tvD2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_hint_color"
                    android:layout_marginLeft="9px"
                    android:textSize="12px"
                    android:text="0.0"/>
                <TextView
                    android:id="@+id/tvD3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_hint_color"
                    android:layout_marginLeft="9px"
                    android:textSize="12px"
                    android:text="0.0"/>

            </LinearLayout>


        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/layout3"
            android:orientation="vertical"
            android:paddingLeft="26px"
            android:gravity="left"
            android:paddingTop="16px">



                <TextView
                    android:id="@+id/tvDateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14px"
                    android:textColor="@color/text_hint_color"/>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvVisitName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color"
                    android:text="巴西"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="24px"/>


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tvVisitTeamRanking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_hint_color"
                        android:textSize="14px"
                        android:layout_marginLeft="9px"
                        android:layout_centerVertical="true"
                        android:text="[9]" />

                    <TextView
                        android:id="@+id/tvVisityellow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12px"
                        android:textColor="@color/colorAccent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10px"
                        android:text="1"
                        android:layout_toRightOf="@+id/tvVisitRed"/>

                    <TextView
                        android:id="@+id/tvVisitRed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12px"
                        android:textColor="#aa0200"
                        android:text="1"
                        android:layout_alignBaseline="@+id/tvVisitTeamRanking"
                        android:layout_alignBottom="@+id/tvVisitTeamRanking"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="12px">

                <TextView
                    android:id="@+id/tvD4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_hint_color"
                    android:textSize="12px"
                    android:text="0.0"/>
                <TextView
                    android:id="@+id/tvD5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_hint_color"
                    android:layout_marginLeft="10px"
                    android:textSize="12px"
                    android:text="0.0"/>
                <TextView
                    android:id="@+id/tvD6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_hint_color"
                    android:layout_marginLeft="10px"
                    android:textSize="12px"
                    android:text="0.0"/>

            </LinearLayout>


        </LinearLayout>





    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingTop="13px"
        android:orientation="vertical"
        android:paddingRight="18px"
        android:id="@+id/linearLayout"
        android:visibility="invisible">
        <TextView
            android:layout_width="36px"
            android:layout_height="18px"
            android:textSize="14px"
            android:textColor="@color/white"
            android:layout_marginLeft="10px"
           android:gravity="center"
            android:text="解盘"/>

        <TextView
            android:id="@+id/tvComments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12px"
            android:textSize="15px"
            android:layout_marginTop="46px"
            android:textColor="@color/white"
            android:text="800评"
            android:visibility="gone"/>

    </LinearLayout>

</RelativeLayout>