<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:gravity="center"
        android:paddingBottom="42px"
        android:paddingTop="42px">

        <LinearLayout
            android:layout_width="400px"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/bg_select_matchtype"
            android:padding="3px">
            
            
            <TextView
                android:id="@+id/tvSelectScore"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@drawable/tv_color_selector"
                android:text="足球"
                android:textSize="28px"
                android:background="@drawable/tv_left_selector"/>


            <TextView
                android:id="@+id/tvSelectBaseketBall"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@drawable/tv_color_selector"
                android:text="篮球"
                android:textSize="28px"
                android:background="@drawable/tv_right_selector"/>
            
            
        </LinearLayout>

    </LinearLayout>

</LinearLayout>