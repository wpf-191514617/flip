<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="102px"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="30px"
        android:paddingRight="30px">
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:orientation="horizontal">
                
                <TextView
                    android:id="@+id/tvLeague"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24px"
                    android:text="联赛"
                    />
                
                <TextView
                    android:id="@+id/tvMatchTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:text="13:00"
                    android:textSize="22px"
                    android:textColor="@color/text_color"/>
                
                
                
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvHomeTeam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="26px"
                    android:text="联赛"
                    android:textColor="@color/__picker_black_40"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15px"
                    android:text="VS"
                    android:textSize="26px"
                    android:textColor="@color/orange"/>


                <TextView
                    android:id="@+id/tvVisitTeam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15px"
                    android:text="13:00"
                    android:textSize="26px"
                    android:textColor="@color/__picker_black_40"/>



            </LinearLayout>
            
            
            
        </LinearLayout>
        
        <ImageView
            android:layout_width="36px"
            android:layout_height="36px"
            android:src="@drawable/right"/>
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="66px"
        android:orientation="horizontal">
        
        <TextView
            style="@style/tabItemParent"
            android:layout_width="144px"
            android:text="公司"
            android:background="@drawable/bg_tab_item"/>

        <TextView
            style="@style/tabGrayItem"
            android:text="初/即"/>

        <TextView
            style="@style/tabGrayItem"
            android:text="上盘"/>

        <TextView
            style="@style/tabGrayItem"
            android:text="盘口"
            />

        <TextView
            style="@style/tabGrayItem"
            android:text="下盘"/>
        
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/layoutCompanyBet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
    </LinearLayout>
    

</LinearLayout>